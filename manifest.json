{
  "manifest_version": 3,
  "name": "YouTube RAG Chat",
  "version": "1.0",
  "description": "Ask questions about YouTube videos using RAG!",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}